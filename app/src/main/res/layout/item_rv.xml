<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_200">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#E91E63"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/title_rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/name"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintRight_toLeftOf="@id/rate"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginStart="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/title_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textColor="#E91E63"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/diff_title"
        android:layout_marginLeft="20sp"
        app:layout_constraintLeft_toRightOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/rate"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Rate"
        app:layout_constraintTop_toBottomOf="@+id/title_rate"
        app:layout_constraintLeft_toRightOf="@+id/name"
        app:layout_constraintRight_toLeftOf="@id/diff"
        android:layout_marginLeft="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/diff_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diff"
        android:textColor="#E91E63"
        android:layout_marginStart="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title_rate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/diff"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/diff"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diff_title"
        android:text="Diff"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/rate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>